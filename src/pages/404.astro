---
import Layout from '@/layouts/Layout.astro'
import Footer from '@/sections/Footer.astro'
import Header from '@/sections/Header.astro'
import Button from '@/components/Button.astro'
---

<Layout>
  <div class="flex min-h-screen flex-col">
    <Header />
    <div class="flex flex-1">
      <section class="max-w-4xl mx-auto px-4 py-20 flex justify-center items-center flex-col gap-8">
        <h1
          class="text-6xl md:text-8xl text-brand text-balance text-center"
          aria-label="Big Ibai aún no ha llegado a estas tierras"
        >
          Big Ibai aún no ha llegado a estas tierras
        </h1>
        <Button
          href="/"
          size="lg"
          aria-label="Volver al inicio"
        >
          Volver al Inicio
        </Button>
      </section>
    </div>
    <Footer />
  </div>
</Layout>
