---
// Component for adding animated elements to the background
---

<div class="animated-bg">
  <div class="stars"></div>
  <div class="twinkling"></div>
</div>

<style>
  .animated-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
  }

  .stars {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: transparent;
  }

  .stars::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      radial-gradient(2px 2px at 20px 30px, rgba(248, 177, 52, 0.3), transparent),
      radial-gradient(2px 2px at 60px 70px, rgba(248, 177, 52, 0.2), transparent),
      radial-gradient(1px 1px at 50px 50px, rgba(255, 255, 255, 0.3), transparent),
      radial-gradient(1px 1px at 130px 80px, rgba(255, 255, 255, 0.2), transparent),
      radial-gradient(2px 2px at 90px 10px, rgba(248, 177, 52, 0.4), transparent);
    background-size: 200px 200px;
    background-repeat: repeat;
    animation: sparkle 200s linear infinite;
  }

  .twinkling {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: transparent;
  }

  .twinkling::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      radial-gradient(1px 1px at 100px 150px, rgba(248, 177, 52, 0.5), transparent),
      radial-gradient(1px 1px at 200px 80px, rgba(255, 255, 255, 0.4), transparent),
      radial-gradient(2px 2px at 150px 200px, rgba(248, 177, 52, 0.3), transparent);
    background-size: 300px 300px;
    background-repeat: repeat;
    animation: twinkle 100s linear infinite;
    opacity: 0;
  }

  @keyframes sparkle {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-200px);
    }
  }

  @keyframes twinkle {
    0%, 100% {
      opacity: 0;
    }
    50% {
      opacity: 1;
    }
  }

  /* Reduce animations if the user prefers */
  @media (prefers-reduced-motion: reduce) {
    .stars::before,
    .twinkling::before {
      animation: none;
    }
  }
</style>
