---
interface Props {
  class?: string
  style?: string
}

const { class: className, style, ...rest } = Astro.props
---

<div class:list={['bento-card', className]} style={style} {...rest}>
  <slot />
</div>

<style>
  .bento-card {
    position: relative;
    background: linear-gradient(135deg, rgba(139, 92, 246, 0.5) 0%, rgba(0, 41, 107, 0.7) 100%);
    backdrop-filter: blur(10px);
    animation: fadeInScale 0.6s ease-out;
    animation-fill-mode: both;
    transition: all 0.3s ease;
    &:hover {
      border-color: rgba(255, 255, 255, 0.2);
      box-shadow: 0 20px 60px rgba(139, 92, 246, 0.3);
      transform: translateY(-4px);
    }
  }

  .bento-card::before {
    content: '';
    position: absolute;
    inset: 0;
    padding: 1px;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0), transparent);
    pointer-events: none;
  }

  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: scale(0.95) translateY(20px);
    }

    to {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }

  @media (max-width: 768px) {
    .bento-card {
      min-height: 350px;
    }
  }
</style>
