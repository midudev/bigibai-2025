---
export interface Props {
  id?: string
}

const { id = 'achievement-notification' } = Astro.props
---

<div id={id} class="achievement-notification">
  <div class="achievement-icon-container">
    <img src="/achievement_01.webp" alt="Logro" class="achievement-icon" />
  </div>
  <div class="achievement-content">
    <h4 class="achievement-title">Â¡Logro desbloqueado!</h4>
    <p class="achievement-text text-balance">Logro desbloqueado</p>
  </div>
</div>

<style>
  /* Achievement Notification */
  .achievement-notification {
    position: fixed;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%) translateY(150%);
    background: #1f1f1f;
    border-radius: 50px;
    padding: 0.5rem 0.5rem 0.5rem 0.5rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.8);
    z-index: 1000;
    border: 2px solid #2c2c2c;
    width: 68px;
    height: 68px;
    overflow: hidden;
    transition:
      transform 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275),
      width 0.8s cubic-bezier(0.4, 0, 0.2, 1),
      padding 0.5s ease,
      gap 0.5s ease;

    &.show {
      transform: translateX(-50%) translateY(0);
    }

    &.expanded {
      width: 300px;
      padding: 0.5rem 2rem 0.5rem 0.5rem;
    }
  }

  .achievement-icon-container {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    overflow: hidden;
    border: 2px solid #6ade6a;
    flex-shrink: 0;
  }

  .achievement-icon {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .achievement-content {
    display: flex;
    flex-direction: column;
    width: 200px;
    min-width: 200px;
    flex-shrink: 0;
    opacity: 1;
    white-space: nowrap;
    transition: opacity 0.3s ease 0.2s;
  }

  .achievement-title {
    color: white;
    font-weight: bold;
    font-size: 0.9rem;
    margin: 0;
    text-transform: uppercase;
  }

  .achievement-text {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.75rem;
    margin: 0;
    text-overflow: ellipsis;
    overflow: hidden;
  }
</style>
